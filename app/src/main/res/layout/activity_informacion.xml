<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informacion">

    <ScrollView
        android:id="@+id/information_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/popupMenu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@mipmap/menu"
                android:onClick="showPopup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/information_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:text="@string/info_title"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/image_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/information_title"
                app:layout_constraintBottom_toTopOf="@id/filter_main_info">

                <TextView
                    android:id="@+id/filter_info"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@string/lorem_ipsum_short"
                    android:textSize="15sp"
                    android:layout_width="0dp" />

                <ImageView
                    android:id="@+id/filter_info_image"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_unam"
                    android:layout_width="0dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/filter_main_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_text_container"
                android:text="@string/lorem_ipsum"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>