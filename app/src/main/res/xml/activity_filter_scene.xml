<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/filter_select"
            android:layout_width="409dp"
            android:layout_height="96dp"
            app:layout_editor_absoluteY="16dp"
            app:layout_constraintStart_toEndOf="@+id/filter_right_option"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            app:layout_constraintEnd_toStartOf="@+id/filter_select"
            android:layout_width="80dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBaseline_toTopOf="parent"
            android:id="@+id/filter_right_option"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/filter_select"
            android:layout_width="350dp"
            android:layout_height="64dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000">
        <OnSwipe
            app:touchAnchorId="@+id/filter_select"
            app:touchAnchorSide="right"
            app:dragDirection="dragRight"/>
    </Transition>
</MotionScene>
